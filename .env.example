# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Application Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_NAME=Schoolgle
NEXT_PUBLIC_APP_DESCRIPTION="School Management System"

# Email Configuration (if using email services)
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_email_user
EMAIL_SERVER_PASSWORD=your_email_password
EMAIL_FROM=noreply@your-domain.com

# Storage Configuration (for file uploads)
NEXT_PUBLIC_STORAGE_URL=your_storage_url
STORAGE_BUCKET=your_bucket_name

# API Keys for External Services
NEXT_PUBLIC_WEATHER_API_KEY=your_weather_api_key

# Security
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_nextauth_secret

# Feature Flags
NEXT_PUBLIC_ENABLE_WEATHER_WIDGET=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true